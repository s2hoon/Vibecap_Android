<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_mypage_alarm_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_activity_mypage_alarm_rectangle" />

    <ImageView
        android:id="@+id/activity_mypage_alarm_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_activity_mypage_alarm_like" />

    <TextView
        android:id="@+id/activity_mypage_alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/activity_mypage_alarm_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="내가 작성한 게시물을 좋아요 했습니다" />

    <TextView
        android:id="@+id/activity_mypage_alarm_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user123"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="@+id/activity_mypage_alarm_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_mypage_alarm_title" />

    <TextView
        android:id="@+id/activity_mypage_alarm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="님의 좋아요"
        app:layout_constraintBottom_toBottomOf="@+id/activity_mypage_alarm_userid"
        app:layout_constraintStart_toEndOf="@+id/activity_mypage_alarm_userid"
        app:layout_constraintTop_toBottomOf="@+id/activity_mypage_alarm_title" />


</androidx.constraintlayout.widget.ConstraintLayout>