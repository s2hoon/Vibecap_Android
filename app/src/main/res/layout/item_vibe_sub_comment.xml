<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="31dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_vibe_sub_comment_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_vibe_sub_comment_profile_img_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/transparent"
            android:contentDescription="@string/profile_img"
            android:src="@drawable/image_activity_vibe_post_profile"
            app:civ_border_color="@color/gray_300"
            app:civ_border_width="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_vibe_sub_comment_nickname_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/item_vibe_sub_comment_profile_img_iv"
            app:layout_constraintEnd_toStartOf="@+id/item_vibe_sub_comment_menu_btn"
            app:layout_constraintStart_toEndOf="@+id/item_vibe_sub_comment_profile_img_iv"
            app:layout_constraintTop_toTopOf="@+id/item_vibe_sub_comment_profile_img_iv" />

        <ImageButton
            android:id="@+id/item_vibe_sub_comment_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:contentDescription="@string/comment_menu"
            android:src="@drawable/ic_activity_mypage_post_menu"
            app:layout_constraintBottom_toBottomOf="@+id/item_vibe_sub_comment_profile_img_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_vibe_sub_comment_profile_img_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/item_vibe_sub_comment_body_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/item_vibe_sub_comment_profile_layout" />

    <TextView
        android:id="@+id/item_vibe_sub_comment_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:text="2022. 12. 26. 15:10"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/item_vibe_sub_comment_body_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>